@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="row d-flex justify-content-center mt-4">
    <div class="col-6">
        <div class="card">
            <div class="card-header">
                <div class="card-title mb-0">
                    Firebase Phone Authentication
                </div>
            </div>
            <div class="card-body">
                <div class="mb-2">
                    <label>Phone Number</label>
                    <input id="phoneNumber" class="form-control mb-3" type="text" placeholder="Enter phone number" />
                </div>
                <div class="mb-2">
                    <label>Code</label>
                    <input id="verifyCode" class="form-control mb-3" type="text" placeholder="Enter verification code" />
                </div>
                <div id="recaptcha-container"></div>

            </div>
            <div class="card-footer">
                <button type="button" class="btn btn-primary" id="signInWithPhoneButton">Login</button>
                <button type="button" class="btn btn-secondary" id="getCode">Get Code</button>
            </div>
        </div>
    </div>
</div>

